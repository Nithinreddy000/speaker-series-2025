		{
			"name": "4. Upload Docs with Embeddings",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "api-key",
						"value": "{{search-api-key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"value\": [\n    {\n      \"@search.action\": \"upload\",\n      \"id\": \"1\",\n      \"title\": \"Kubernetes\",\n      \"content\": \"Kubernetes is an open-source system for automating the deployment, scaling, and management of containerized applications.\",\n      \"contentVector\": {{kubernetes_embedding}}\n    },\n    {\n      \"@search.action\": \"upload\",\n      \"id\": \"2\",\n      \"title\": \"Photosynthesis\",\n      \"content\": \"Photosynthesis is the process used by plants, algae, and some bacteria to convert light energy into chemical energy.\",\n      \"contentVector\": {{photosynthesis_embedding}}\n    }\n  ]\n}"
				},
				"url": {
					"raw": "https://{{search-service-name}}.search.windows.net/indexes/{{index-name}}/docs/index?api-version={{search-api-version}}",
					"protocol": "https",
					"host": [
