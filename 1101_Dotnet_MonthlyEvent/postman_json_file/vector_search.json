						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "api-key",
						"value": "{{search-api-key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"vectorQueries\": [\n    {\n      \"vector\": {{query_embedding}},\n      \"fields\": \"contentVector\",\n      \"k\": 3\n    }\n  ]\n}"
				},
