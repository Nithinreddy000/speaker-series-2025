{
	"info": {
		"_postman_id": "8f777e61-e1e6-499e-8647-be28768d35be",
		"name": "Azure Semantic Search - Auto Embedding",
		"description": "Automatically generates embeddings and uploads documents to Azure AI Search",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "35373448"
	},
	"item": [
		{
			"name": "1. Create Index",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "api-key",
						"value": "{{search-api-key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{index-name}}\",\n  \"fields\": [\n    { \"name\": \"id\", \"type\": \"Edm.String\", \"key\": true, \"filterable\": false },\n    { \"name\": \"title\", \"type\": \"Edm.String\" },\n    { \"name\": \"content\", \"type\": \"Edm.String\" },\n    { \"name\": \"titleVector\", \"type\": \"Collection(Edm.Single)\", \"searchable\": true, \"vectorSearchDimensions\": 1536, \"vectorSearchProfile\": \"myHnswProfile\" },\n    { \"name\": \"contentVector\", \"type\": \"Collection(Edm.Single)\", \"searchable\": true, \"vectorSearchDimensions\": 1536, \"vectorSearchProfile\": \"myHnswProfile\" }\n  ],\n  \"vectorSearch\": {\n    \"profiles\": [\n      { \"name\": \"myHnswProfile\", \"algorithm\": \"hnsw\", \"parameters\": { \"m\": 4, \"efConstruction\": 400 } }\n    ]\n  }\n}"
				},
				"url": {
					"raw": "https://{{search-service-name}}.search.windows.net/indexes/{{index-name}}?api-version={{search-api-version}}",
					"protocol": "https",
					"host": [
						"{{search-service-name}}",
						"search",
						"windows",
						"net"
					],
					"path": [
						"indexes",
						"{{index-name}}"
					],
					"query": [
						{
							"key": "api-version",
							"value": "{{search-api-version}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Generate Embedding (Kubernetes)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let response = pm.response.json();",
							"pm.collectionVariables.set('kubernetes_embedding', JSON.stringify(response.data[0].embedding));",
							"console.log('✅ Kubernetes embedding saved');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "api-key",
						"value": "{{openai-api-key}}"
					}
